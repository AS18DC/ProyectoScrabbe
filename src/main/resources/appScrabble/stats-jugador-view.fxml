<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="appScrabble.StatsJugadorController"
      alignment="CENTER" spacing="20" prefWidth="500" prefHeight="400"
      style="-fx-background-color: rgba(143, 173, 50, 0.8); -fx-background-radius: 10px;">
    <children>
        <!-- Título -->
        <Label text="Estadísticas de Jugador"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />

        <!-- Campo para el alias -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Alias:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />
            <TextField fx:id="aliasField" promptText="Ingrese el alias del jugador a buscar"
                       style="-fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;" />
        </HBox>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="20">
            <Button text="Mostrar Estadísticas" onAction="#onStatsClick"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #68A042; -fx-text-fill: #14241B; -fx-background-radius: 10px;" />
            <Button text="Cancelar" onAction="#onCancelarClick"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 10px;" />
        </HBox>

        <!-- Tabla de estadísticas -->
        <TableView fx:id="statsTable" prefHeight="250" prefWidth="400"
                   style="-fx-background-color: #E0E2E1; -fx-background-radius: 5px; -fx-border-color: #14241B; -fx-border-radius: 5px;">
            <columns>
                <TableColumn fx:id="columnaCategoria" text="Categoría" prefWidth="200"
                             style="-fx-alignment: CENTER; -fx-font-weight: bold;" />
                <TableColumn fx:id="columnaValor" text="Valor" prefWidth="200"
                             style="-fx-alignment: CENTER; -fx-font-weight: bold;" />
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
