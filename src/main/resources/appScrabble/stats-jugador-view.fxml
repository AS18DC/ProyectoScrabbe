<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="500" spacing="20" style="-fx-background-color: rgba(143, 173, 50, 0.8); -fx-background-radius: 10px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appScrabble.StatsJugadorController">
    <children>
        <!-- Título -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #14241B;" text="Estadísticas de Jugador" />

        <!-- Campo para el alias -->
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #14241B;" text="Alias:" />
            <TextField fx:id="aliasField" promptText="Ingrese el alias del jugador a buscar" style="-fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;" />
        </HBox>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#onStatsClick" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #68A042; -fx-text-fill: #14241B; -fx-background-radius: 10px;" text="Mostrar Estadísticas" />
            <Button onAction="#onCancelarClick" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 10px;" text="Vaciar" />
         <Button layoutX="291.0" layoutY="10.0" onAction="#onSalirClick" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 10px;" text="Salir" />
        </HBox>

        <!-- Tabla de estadísticas -->
        <TableView fx:id="statsTable" prefHeight="250" prefWidth="400" style="-fx-background-color: #E0E2E1; -fx-background-radius: 5px; -fx-border-color: #14241B; -fx-border-radius: 5px;">
            <columns>
                <TableColumn fx:id="columnaCategoria" prefWidth="200" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Categoría" />
                <TableColumn fx:id="columnaValor" prefWidth="200" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Valor" />
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
