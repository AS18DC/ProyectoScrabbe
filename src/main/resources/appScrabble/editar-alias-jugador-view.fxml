<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="202.0" prefWidth="366.0" spacing="20" style="-fx-background-color: rgba(143, 173, 50, 0.8);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appScrabble.EditarAliasJugadorController">
    <children>
        <!-- TÃ­tulo centrado -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #14241B;" text="Editar Alias del Jugador" />

        <!-- Alias actual -->
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #14241B;" text="Alias:" />
            <TextField fx:id="aliasField" promptText="Ingrese el alias del jugador" style="-fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;" />
        </HBox>

        <!-- Nuevo alias -->
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #14241B;" text="Nuevo Alias:" />
            <TextField fx:id="aliasNuevoField" prefWidth="150.0" promptText="Ingrese el nuevo alias" style="-fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;">
            <HBox.margin>
               <Insets right="45.0" />
            </HBox.margin></TextField>
        </HBox>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#onEditarClick" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #68A042; -fx-text-fill: #14241B; -fx-background-radius: 10px;" text="Editar" />
            <Button onAction="#onCancelarClick" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 10px;" text="Cancelar" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
