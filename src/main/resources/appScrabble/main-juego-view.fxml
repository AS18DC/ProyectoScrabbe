<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #14241B;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="appScrabble.MainJuegoController">
    <center>
        <VBox alignment="CENTER" spacing="30">
            <children>
                <!-- TÃ­tulo estilizado -->
                <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #E0E2E1;" text="SCRABBLE" />

                <!-- Botones con estilos -->
                <HBox alignment="CENTER">
                    <Button alignment="CENTER" contentDisplay="RIGHT" onAction="#onIniciarJuegoClick" prefWidth="250"
                            style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #8FAD32; -fx-text-fill: #14241B; -fx-background-radius: 15px;"
                            text="Iniciar Juego" textAlignment="CENTER">
                        <graphic>
                            <HBox prefHeight="46.0" prefWidth="48.0">
                                <children>
                                    <ImageView fitHeight="48.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../icons/start.png" />
                                        </image>
                                    </ImageView>
                                </children>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
                <HBox alignment="CENTER">
                    <Button contentDisplay="RIGHT" onAction="#onContinuarPartidaClick" prefWidth="250"
                            style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #8FAD32; -fx-text-fill: #14241B; -fx-background-radius: 15px;"
                            text="Continuar Partida">
                        <graphic>
                            <HBox prefHeight="46.0" prefWidth="48.0">
                                <children>
                                    <ImageView fitHeight="48.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../icons/resume.png" />
                                        </image>
                                    </ImageView>
                                </children>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
                <HBox alignment="CENTER">
                    <Button contentDisplay="RIGHT" onAction="#onSalirClick" prefWidth="250"
                            style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 15px;"
                            text="Salir">
                        <graphic>
                            <HBox prefHeight="46.0" prefWidth="48.0">
                                <children>
                                    <ImageView fitHeight="48.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../icons/exit.png" />
                                        </image>
                                    </ImageView>
                                </children>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>