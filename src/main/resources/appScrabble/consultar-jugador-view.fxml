<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="appScrabble.ConsultarJugadorController"
      alignment="CENTER" spacing="40" prefWidth="1860" prefHeight="1000" style="-fx-background-color: rgba(143, 173, 50, 0.8);">
    <children>
        <!-- TÃ­tulo centrado -->
        <Label text="Consultar Jugador"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />

        <!-- Contenedor para el formulario -->
        <VBox alignment="CENTER" spacing="20">
            <children>
                <!-- Alias -->
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Alias:"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />
                    <TextField fx:id="aliasField" promptText="Ingrese el alias del jugador a buscar"
                               style="-fx-font-size: 14px; -fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;" />
                </HBox>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="30">
                    <Button text="Consultar" onAction="#onConsultarClick"
                            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #68A042; -fx-text-fill: #14241B; -fx-background-radius: 10px;" />
                    <Button text="Cancelar" onAction="#onCancelarClick"
                            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 10px;" />
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
