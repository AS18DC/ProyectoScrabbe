<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="appScrabble.RegistrarJugadorController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300"
      style="-fx-background-color: rgba(143, 173, 50, 0.8); -fx-background-radius: 10px;">
    <children>
        <!-- TÃ­tulo centrado -->
        <Label text="Registrar Jugador"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />

        <!-- Alias del jugador -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Alias:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />
            <TextField fx:id="aliasField" promptText="Ingrese el alias del jugador"
                       style="-fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;" />
        </HBox>

        <!-- Correo del jugador -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Correo:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #14241B;" />
            <TextField fx:id="correoField" promptText="Ingrese el correo del jugador"
                       style="-fx-background-color: #E0E2E1; -fx-text-fill: #14241B; -fx-background-radius: 5px;" />
        </HBox>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="20">
            <Button text="Registrar" onAction="#onRegistrarClick"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #68A042; -fx-text-fill: #14241B; -fx-background-radius: 10px;" />
            <Button text="Cancelar" onAction="#onCancelarClick"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #D72638; -fx-text-fill: #E0E2E1; -fx-background-radius: 10px;" />
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
